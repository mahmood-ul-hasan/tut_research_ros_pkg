<launch>

    <!-- Run live_scan node -->
    <node pkg="ridar_scan" type="live_scan" name="live_scan" clear_params="true" output="screen" >
        <param name="rotation_speed"    value="1" />
        <param name="ref_normalization" value="false" />
        <param name="ref_min"           value="300" />
        <param name="ref_max"           value="900" />
        <param name="export_pcd"        value="true" />
        <param name="export_pts"        value="false" />
        <param name="export_ply"        value="false" />
        <param name="mesh_thresh"       value="0.3" />
        <param name="enable_tilt_compensation" value="true" />
        <param name="is_offline"         value="false" />
        <param name="is_simulation"      value="true" />
    </node>

</launch>
